{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true,
      "groupName": "all-patch-and-minor"
    },
    {
      "groupName": "kotlin-libs",
      "rangeStrategy": "bump",
      "matchPackageNames": [
        "/^org\\.jetbrains\\.kotlin:/"
      ]
    },
    {
      "groupName": "spring-boot-bom",
      "matchPackageNames": [
        "/spring-boot-dependencies/"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "major-upgrades"
    },
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "npm-dependencies"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github-actions"
    },
    {
      "matchManagers": [
        "helm-values"
      ],
      "groupName": "helm-charts",
      "matchFileNames": [
        "Chart.yaml"
      ]
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "groupName": "docker-images"
    }
  ],
  "gradle": {
    "enabled": true,
    "managerFilePatterns": [
      "/(^|/)build\\.gradle(.kts)?$/"
    ]
  },
  "maven": {
    "enabled": true,
    "managerFilePatterns": [
      "/(^|/)pom\\.xml$/"
    ]
  },
  "npm": {
    "enabled": true,
    "managerFilePatterns": [
      "/(^|/)package\\.json$/",
      "/(^|/)package-lock\\.json$/"
    ]
  },
  "dockerfile": {
    "enabled": true,
    "managerFilePatterns": [
      "/(^|/)Dockerfile$/"
    ]
  },
  "github-actions": {
    "enabled": true,
    "managerFilePatterns": [
      "/(^|/)\\.github/workflows/.*\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "enabled": true,
    "managerFilePatterns": [
      "/(^|/)Chart\\.yaml$/"
    ]
  }
}
